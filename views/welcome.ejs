<!doctype html>
<html lang="en">

<head>
    <title> Welcome </title>
    <script src="js/jquery.min.js"></script>
    <script src="js/tether.min.js"></script>
    <script src="js/bootstrap.min.js.css"></script>
    <script src="js/angular.min.js"></script>
    <script src="js/lightbox.min.js"></script>
    <link href="css/bootstrap.min.css" rel="stylesheet">
    <link href="css/lightbox.min.css" rel="stylesheet">
    <link href="css/bootstrap-theme.min.css" rel="stylesheet">
    <script>
        function registerFunction() {
            window.location.href = "signup";
        }

        function loginFunction() {
            window.location.href = "index"
        }
        function deleteFunction() {
            window.location.href = "delete"
        }
    </script>
    <style>
        h1 {
            margin: 50px;
            color: #333;
            text-align: center;
        }
        
        h2 {
            margin: 20px;
            color: #666;
            text-align: center;
        }
        
        .btn {
            width: 300px;
            height: 50px;
            margin: 10px;
        }
        
        div {
            padding: 100px;
        }
    </style>
</head>

<body>
    <h1>Welcome to the movie database</h1>
    <h2>Please login or signup</h2>
    <div align="center">
        <input class="btn btn-success" type="button" id="login" onclick="loginFunction()" value="Login">
        <br>
        <input class="btn btn-primary" type="button" id="register" onclick="registerFunction()" value="Sign Up">
        <br>
        <input class="btn btn-danger" type="button" id="delete" onclick="deleteFunction()" value="Delete Account (DANGER)">

    </div>
</body>

</html>